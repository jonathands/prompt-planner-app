{
  "name": "prompt-manager-electron",
  "version": "1.0.0",
  "description": "A modern prompt management application for organizing and managing prompts",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder -mwl",
    "build:appimage": "electron-builder --linux AppImage",
    "build:deb": "electron-builder --linux deb",
    "build:snap": "electron-builder --linux snap",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["prompt", "manager", "ai", "productivity"],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "homepage": "https://github.com/jonathands/prompt-planner-app",
  "repository": {
    "type": "git",
    "url": "git@githubmy:jonathands/prompt-planner-app.git"
  },
  "license": "ISC",
  "dependencies": {
    "marked": "^17.0.0"
  },
  "devDependencies": {
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.promptmanager.app",
    "productName": "Prompt Manager",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/**/*",
      "assets/**/*",
      "build/icon.png",
      "build/icon.ico",
      "build/icons/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icons/icon_1024x1024.png"
    },
    "directories": {
      "output": "dist"
    }
  }
}
